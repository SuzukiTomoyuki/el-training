doctype html
html
  head
    = render 'layouts/header'
  body.background_color
    nav class="navbar header_color_admin"
      div.container
        = render partial: 'layouts/navbar_title'
        div class="collapse navbar-collapse" id="navbarIndex"
          = render partial: 'layouts/navbar_my_name'
          ul class="nav navbar-nav"
            li = link_to t("description.index_groups"), admin_groups_path
          ul class="nav navbar-nav"
            li = link_to t("description.index_users"), admin_users_path
          ul class="nav navbar-nav"
            li = link_to t("description.index_tasks"), admin_tasks_path
          ul class="nav navbar-nav"
            li = link_to t("description.index_labels"), admin_labels_path

    = render 'layouts/taster'
    = yield
